[alias]
# taken from here: http://stackoverflow.com/questions/
mylog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
st=status -s
exec = "!exec "

[merge]
	tool = vimdiff
	conflictstyle=merge
[filter "idexpansion"]
	clean = /home/resu/bin/clean_id.py
	smudge = /home/resu/bin/smudge_id.py
