[user]
	email = irae.hueck.costa@gmail.com
	name = Irae Hueck Costa
[push]
	default = simple
[init]
	templatedir = ~/.git_template

[alias]
# taken from here: http://stackoverflow.com/questions/
mylog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
st=status -s
exec = "!exec "

[merge]
	tool = vimdiff
	conflictstyle=merge
[credential]
	helper = osxkeychain
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[core]
	excludesfile = /Users/iraehueckcosta/.gitignore
	editor = /usr/local/bin/vim
[color]
	diff = always
[diff]
	tool = vimdiff
[difftool]
	prompt = 0
